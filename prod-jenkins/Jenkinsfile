pipeline {
  agent any 
  stages {
    stage('Install npm packages') { 
      steps {
        sh "cd /home/sifiso/ && [ -d ${node-server} ] && rm -rf /home/sifiso/node-server"
        sh "cd /home/sifiso/ && git clone https://github.com/chynamyerz/node-server"
        sh "cd /home/sifiso/node-server && yarn install"
      }
    }
    stage('Test the server') { 
      steps {
        sh "/home/sifiso/node-server && yarn test"
      }
    }
    stage('Deploy') { 
      steps {
        sh "/home/sifiso/node-server && pm2 restart all"
        sh "pm2 ls"
      }
    }
  }
}
